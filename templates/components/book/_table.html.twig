{% if books|length > 0 %}
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="books-table">
            <thead>
                <tr>
                    <th>{{ 'book.field.title'|trans }}</th>
                    <th>{{ 'book.field.author'|trans }}</th>
                    <th>{{ 'book.field.isbn'|trans }}</th>
                    <th>{{ 'book.field.publicationDate'|trans }}</th>
                    <th>{{ 'common.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for book in books %}
                    <tr>
                        <td>{{ book.title }}</td>
                        <td>{{ book.author }}</td>
                        <td>{{ book.isbn }}</td>
                        <td>{{ book.publicationDate ? book.publicationDate|date('Y-m-d') : '' }}</td>
                        <td>
                            {% include 'components/book/_actions.html.twig' with {
                                'book': book,
                                'show_delete': show_delete|default(true)
                            } %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% else %}
    <div class="alert alert-info">{{ 'book.list.empty'|trans }}</div>
{% endif %}