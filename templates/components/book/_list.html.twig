<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">{{ 'book.list.title'|trans }}</h5>
    </div>
    <div class="card-body">
        <div id="books-container">
            {% include 'components/book/_table.html.twig' with {
                books: books,
                show_delete: true
            } %}
        </div>
        
        <div id="pagination-container">
            {% include 'components/pagination/_pagination.html.twig' with {
                'currentPage': currentPage,
                'lastPage': lastPage
            } %}
        </div>
    </div>
</div>