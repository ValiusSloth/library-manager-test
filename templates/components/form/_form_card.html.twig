<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h1 class="h3 mb-0">{{ title }}</h1>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
            {{ form_content|raw }}
            
            <div class="d-flex justify-content-between">
                <a href="{{ path(cancel_path) }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> {{ 'action.back'|trans }}
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-1"></i> {{ submit_label|default('action.save'|trans) }}
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>