{% extends 'base.html.twig' %}

{% block title %}{{ 'book.new.page_title'|trans }}{% endblock %}

{% block body %}
    {% include 'components/layout/_page_title.html.twig' with {
        'title': 'book.new.title'|trans
    } %}
    
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h1 class="h3 mb-0">{{ 'book.new.title'|trans }}</h1>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
                {% include 'components/book/_form_fields.html.twig' with {'form': form} %}
                
                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_book_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> {{ 'action.back'|trans }}
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save me-1"></i> {{ 'book.action.create'|trans }}
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}